{% extends 'BlogBundle::layout.html.twig' %}

{% block title %}
<h1>Back office - Posts list</h1>
{% endblock %}

{% block content %}
	<a href="{{ path('BlogBundle_admin_post_new') }}">Ajouter un nouvel article</a>
	{% for post in posts %}
	<div>
	    <h2>{{ post.title }}</h2>
	    <p>{{ post.content }}</p>
	    <p>{{ post.author.username }}</p>
	    <p>{{ post.createdAt|date('Y-m-d') }}</p>
	    <a href="{{ path('BlogBundle_post_single', {'id': post.id }) }}">En savoir plus</a>
	</div>
	{% endfor %}
{% endblock %}